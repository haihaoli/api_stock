<%= search_form_for @q, :url => usstocks_path do |f| %>
  <p><%= f.search_field :juhe_gid_cont, :placeholder => "股票代号，支持模糊搜索", :class => "form-control" %></p>
  <p><%= f.search_field :name_cont, :placeholder => "股票名称，支持模糊搜索", :class => "form-control" %></p>

  <p class="text-right">
    <%= submit_tag "送出筛选", :class => "btn btn-primary" %>
  </p>
<% end %>

<h2>美股列表</h2>

<table class="table">
  <tr>
    <th>ID编号</th>
    <th>股票代号</th>
    <th>股票名称</th>
    <!-- <th>抓取时间</th> -->
    <!-- <th></th> -->
  </tr>
  <% @usstocks.each do |u| %>
  <tr>
    <td><%= u.id %></td>
    <td>
      <%= link_to usstock_path(u) do %>
        <%= u.juhe_gid %>
      <% end %>
    </td>
    <td><%= u.name %></td>
    <!-- <td><%= u.created_at %></td> -->
    <!-- <td><%= link_to"删除记录", usstock_path(u), method: :delete, :class => "btn btn-danger" %></td> -->
  </tr>
  <% end %>
</table>

<%= paginate @usstocks %>
